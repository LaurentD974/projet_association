{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<header>
  <div class="header-left">
    <a href="https://www.compagnons-du-devoir.com/" target="_blank" rel="noopener">
      <img
        src="{{ asset('image/aocdtf-logo.svg') }}"
        alt="Logo des Compagnons du Devoir"
        class="logo"
      />
    </a>
  </div>
  <div class="header-center">
    <h1 class="site-title">
      Association Ouvrière des Compagnons du Devoir et du Tour de France<br />
      <span class="ile" aria-label="île">🏝️</span> Île de la Réunion
      <span class="palmier" aria-label="Palmier">🌴</span>
    </h1>
  </div>
 
</header>
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- Logo -->
      <div class="text-center mb-4">
        <img src="{{ asset('image/logo_province_reunion.png') }}" alt="Logo" width="120">
      </div>

      <h2 class="mb-4 text-center">🔐 Connexion</h2>

      <!-- Flash messages -->
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'info') }}">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}

      <!-- Formulaire de connexion -->
      <form method="post">
        {% if error %}
          <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
          </div>
        {% endif %}

        <div class="mb-3">
          <label for="inputEmail" class="form-label">Adresse email</label>
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="mb-1">
          <label for="inputPassword" class="form-label">Mot de passe</label>
          <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <!-- Lien mot de passe oublié aligné à droite -->
        <div class="text-end mb-3">
          <a href="{{ path('app_forgot_password_request') }}" class="text-decoration-none">🔑 Mot de passe oublié ?</a>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <!-- Boutons alignés gauche/droite -->
        <div class="d-flex justify-content-between mt-4">
          <button type="submit" class="btn btn-primary">Se connecter</button>
          <a href="{{ path('home') }}" class="btn btn-outline-secondary">🏠 Retour à l’accueil</a>
        </div>
      </form>

    </div>
  </div>
</div>
{% endblock %}