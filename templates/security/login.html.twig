{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <!-- Logo -->
      <div class="text-center mb-4">
        <img src="{{ asset('image/logo_province_reunion.png') }}" alt="Logo" width="120">
      </div>

      <h2 class="mb-4 text-center">🔐 Connexion</h2>

      <!-- Flash messages -->
      {% for label, messages in app.flashes %}
        {% for message in messages %}
          <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'warning' ? 'warning' : 'info') }}">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}

      <!-- Formulaire de connexion -->
      <form method="post">
        {% if error %}
          <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
          </div>
        {% endif %}

        <div class="mb-3">
          <label for="inputEmail" class="form-label">Adresse email</label>
          <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" required autofocus>
        </div>

        <div class="mb-3">
          <label for="inputPassword" class="form-label">Mot de passe</label>
          <input type="password" name="password" id="inputPassword" class="form-control" required>
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="d-grid gap-2">
          <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
      </form>

      <!-- Liens supplémentaires -->
      <div class="mt-4 text-center">
        <a href="{{ path('app_forgot_password') }}">🔑 Mot de passe oublié ?</a><br>
        <a href="{{ path('home') }}" class="btn btn-outline-secondary mt-3">🏠 Retour à l’accueil</a>
      </div>

    </div>
  </div>
</div>
{% endblock %}