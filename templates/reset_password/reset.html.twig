{% extends 'base.html.twig' %}

{% block title %}R√©initialisation du mot de passe{% endblock %}

{% block body %}
{% include '_partials/header.html.twig' %}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">

          <div class="text-center mb-3">
            <img src="{{ asset('image/logo_province_reunion.png') }}" alt="Logo" width="100" height="100">
          </div>

          <h1 class="h4 text-center mb-3">üîê R√©initialiser votre mot de passe</h1>

          {# Flashs d'erreur/succ√®s #}
          {% for message in app.flashes('reset_password_error') %}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              {{ message }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
          {% endfor %}
          {% for message in app.flashes('success') %}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
              {{ message }}
              <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
            </div>
          {% endfor %}

          {# Formulaire #}
          {{ form_start(resetForm, { attr: { novalidate: 'novalidate' } }) }}
            {{ form_errors(resetForm) }}

            <div class="mb-3">
              {{ form_row(resetForm.plainPassword.first, {
                label: 'Nouveau mot de passe',
                attr: { class: 'form-control', autocomplete: 'new-password' }
              }) }}
            </div>

            <div class="mb-3">
              {{ form_row(resetForm.plainPassword.second, {
                label: 'Confirmer le mot de passe',
                attr: { class: 'form-control', autocomplete: 'new-password' }
              }) }}
            </div>

            <button class="btn btn-primary w-100" type="submit">R√©initialiser</button>
          {{ form_end(resetForm) }}

          <div class="text-center mt-3">
            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">üîô Retour √† la connexion</a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
