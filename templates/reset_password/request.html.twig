{% extends 'base.html.twig' %}

{% block title %}R√©initialisation du mot de passe{% endblock %}

{% block body %}
{% include '_partials/header.html.twig' %}

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body p-4">

          <div class="text-center mb-4">
            <img src="{{ asset('image/logo_province_reunion.png') }}" alt="Logo de la Province" width="100" height="100">
          </div>

          <h2 class="h4 text-center mb-2">üîÅ R√©initialisation du mot de passe</h2>
          <p class="text-muted text-center mb-4">
            Indiquez votre adresse e-mail. Si elle correspond √† un compte, vous recevrez un lien de r√©initialisation.
          </p>

          {# Messages flash #}
          {% for label, messages in app.flashes %}
            {% for message in messages %}
              <div class="alert alert-{{ label == 'error' ? 'danger' : (label == 'success' ? 'success' : 'info') }} alert-dismissible fade show" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
              </div>
            {% endfor %}
          {% endfor %}

          {# Formulaire #}
          {{ form_start(requestForm, { attr: { novalidate: 'novalidate' } }) }}
            {{ form_errors(requestForm) }}

            <div class="mb-3">
              {{ form_label(requestForm.email, 'Adresse e-mail', { label_attr: { class: 'form-label' } }) }}
              {{ form_widget(requestForm.email, { attr: { class: 'form-control', placeholder: 'ex. jean.dupont@example.com', autocomplete: 'email', autofocus: true } }) }}
              {{ form_errors(requestForm.email) }}
            </div>

            <div class="d-grid gap-2">
              <button type="submit" class="btn btn-primary">
                üì© Recevoir le lien de r√©initialisation
              </button>
            </div>
          {{ form_end(requestForm) }}

          <div class="mt-4 text-center">
            <a href="{{ path('app_login') }}" class="btn btn-outline-secondary">üîô Retour √† la page de connexion</a>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
