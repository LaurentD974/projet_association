{% extends 'base.html.twig' %}

{% block title %}Proposer un événement{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Proposer un événement</h1>

        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.title) }}
            {{ form_widget(form.title, {'attr': {'id': 'event_title', 'class': 'form-control'}}) }}
            {{ form_errors(form.title) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'id': 'event_description', 'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.location) }}
            {{ form_widget(form.location, {'attr': {'id': 'event_location', 'class': 'form-control'}}) }}
            {{ form_errors(form.location) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.startDate) }}
            {{ form_widget(form.startDate, {'attr': {'id': 'event_startDate', 'class': 'form-control'}}) }}
            {{ form_errors(form.startDate) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.endDate) }}
            {{ form_widget(form.endDate, {'attr': {'id': 'event_endDate', 'class': 'form-control'}}) }}
            {{ form_errors(form.endDate) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.type) }}
            {{ form_widget(form.type, {'attr': {'id': 'event_type', 'class': 'form-control'}}) }}
            {{ form_errors(form.type) }}
        </div>

       <div class="form-footer">
    <a href="{{ path('gacheur_dashboard') }}" class="btn btn-secondary">Retour au tableau de bord</a>
    <button type="submit" class="btn btn-primary">Soumettre</button>
</div>

        {{ form_end(form) }}
    </div>
{% endblock %}