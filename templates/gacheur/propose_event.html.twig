{% extends 'base.html.twig' %}

{% block title %}Proposer un événement{% endblock %}

{% block body %}
<div class="container py-4">
  <h1 class="h4 text-primary mb-3">Proposer un événement</h1>

  {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
    {{ form_errors(form) }}

    <div class="mb-3">
      {{ form_row(form.title, {
        label: 'Titre',
        attr: { placeholder: "Ex : Réunion de corporation" }
      }) }}
    </div>

    <div class="mb-3">
      {{ form_row(form.description, {
        label: 'Description',
        attr: { rows: 4, placeholder: "Détails, ordre du jour…" }
      }) }}
    </div>

    <div class="mb-3">
      {{ form_row(form.location, {
        label: 'Lieu',
        attr: { placeholder: "Ex : Siège, Salle 2" }
      }) }}
    </div>

    <div class="row">
      <div class="col-md-6 mb-3">
        {{ form_row(form.startDate, { label: 'Début' }) }}
      </div>
      <div class="col-md-6 mb-3">
        {{ form_row(form.endDate, { label: 'Fin' }) }}
      </div>
    </div>

    <div class="mb-3">
      {{ form_row(form.type, {
        label: "Type d’événement",
              }) }}
    </div>

    <div class="d-flex justify-content-between gap-2">
      <a href="{{ path('gacheur_dashboard') }}" class="btn btn-outline-secondary">← Retour au tableau de bord</a>
      <button type="submit" class="btn btn-primary">Soumettre</button>
    </div>
  {{ form_end(form) }}
</div>
{% endblock %}
