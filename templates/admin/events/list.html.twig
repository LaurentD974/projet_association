{% extends 'base.html.twig' %}

{% block title %}Liste des √©v√©nements{% endblock %}

{% block body %}
<div class="container py-4">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h4 text-primary m-0">üìã Tous les √©v√©nements</h1>
    <a href="{{ path('admin_events_new') }}" class="btn btn-primary">‚ûï Cr√©er un √©v√©nement</a>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-light">
        <tr>
          <th scope="col">Titre</th>
          <th scope="col" class="text-nowrap">Date</th>
          <th scope="col">Type</th>
          <th scope="col" class="text-center">Inscrits</th>
          <th scope="col" class="text-center">Valid√©</th>
          <th scope="col" class="text-end">Actions</th>
        </tr>
      </thead>
      <tbody>
        {# Id√©alement, trie c√¥t√© contr√¥leur. √Ä d√©faut : #}
        {% set sortedEvents = events|sort((a, b) => a.startDate <=> b.startDate) %}

        {% for event in sortedEvents %}
          {# Pr√©pare la liste des inscrits pour le tooltip #}
          {% set _names = [] %}
          {% for p in event.participants %}
            {% set _label = ((p.prenom ?? '') ~ ' ' ~ (p.nom ?? ''))|trim %}
            {% if _label == '' %}
              {% set _label = p.email ?? '‚Äî' %}
            {% endif %}
            {% set _names = _names|merge([ _label|e ]) %}
          {% endfor %}
          {% set tooltip_html = _names is not empty ? _names|join('<br>') : 'Aucun inscrit' %}

          <tr>
            <td class="fw-semibold">{{ event.title }}</td>

            <td class="text-nowrap">
              {{ event.startDate ? event.startDate|date('d/m/Y H:i') : '‚Äî' }}
            </td>

            <td>
              {% if event.type %}
                <span class="badge bg-primary-subtle text-primary border border-primary-subtle">
                  {{ event.type }}
                </span>
              {% else %}
                <span class="text-muted">‚Äî</span>
              {% endif %}
            </td>

            <td class="text-center">
              <span
                class="badge bg-info text-dark"
                data-bs-toggle="tooltip"
                data-bs-html="true"
                title="{{ tooltip_html|raw }}"
              >
                {{ event.participants|length }}
              </span>
            </td>

            <td class="text-center">
              {% if event.isValidated %}
                <span class="badge bg-success">Valid√©</span>
              {% else %}
                <span class="badge bg-warning text-dark">En attente</span>
              {% endif %}
            </td>

            <td class="text-end">
              <div class="btn-group" role="group" aria-label="Actions">
                <a href="{{ path('admin_events_edit', { id: event.id }) }}" class="btn btn-sm btn-warning" title="√âditer">‚úèÔ∏è</a>

                {% if not event.isValidated %}
                  <a href="{{ path('admin_events_validate_one', { id: event.id }) }}" class="btn btn-sm btn-success" title="Valider">‚úÖ</a>
                {% endif %}

                <form method="post"
                      action="{{ path('admin_events_delete', { id: event.id }) }}"
                      class="d-inline"
                      onsubmit="return confirm('Confirmer la suppression ?');">
                  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                  <button class="btn btn-sm btn-danger" title="Supprimer">üóëÔ∏è</button>
                </form>
              </div>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="6" class="text-center text-muted py-4">Aucun √©v√©nement trouv√©.</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>

  <div class="mt-3">
    <a href="{{ path('admin_dashboard') }}" class="btn btn-outline-secondary">‚¨ÖÔ∏è Retour au dashboard</a>
  </div>
</div>
{% endblock %}

{% block javascripts %}
  {{ parent() }}
  <script>
    // Initialisation des tooltips Bootstrap (BS5+)
    document.addEventListener('DOMContentLoaded', function () {
      const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      tooltipTriggerList.forEach(function (el) {
        new bootstrap.Tooltip(el);
      });
    });
  </script>
{% endblock %}
