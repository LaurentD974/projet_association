{% extends 'base.html.twig' %}

{% block title %}
    {{ event is defined ? 'Modifier un √©v√©nement' : 'Cr√©er un √©v√©nement' }}
{% endblock %}

{% block body %}
<div class="container">
    <h1 class="mb-4 text-primary">
        {{ event is defined ? '‚úèÔ∏è Modifier un √©v√©nement' : '‚ûï Cr√©er un √©v√©nement' }}
    </h1>

    <div class="card shadow border-0">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
