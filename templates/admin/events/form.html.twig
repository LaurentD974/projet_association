            </div>

            <div class="mb-3">
                {{ form_label(form.type) }}
                {{ form_widget(form.type, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.type) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.isValidated, {'attr': {'class': 'form-check-input'}}) }}
                {{ form_label(form.isValidated, null, {'label_attr': {'class': 'form-check-label'}}) }}
                {{ form_errors(form.isValidated) }}
            </div>

            <button class="btn btn-primary">üíæ Enregistrer</button>
