{% extends 'base.html.twig' %}

{% block title %}Tableau de bord administrateur{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
  <div class="container-fluid">
    <a class="navbar-brand" href="{{ path('home') }}">🏠 Retour à l'accueil</a>
    <div class="collapse navbar-collapse justify-content-end">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="btn btn-outline-light" href="{{ path('app_logout') }}">🔒 Se déconnecter</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <h1 class="mb-4 text-center text-primary">TABLEAU DE BORD PROVINCIAL</h1>

  <div class="row g-4">
    <!-- Bloc Utilisateurs -->
    <div class="col-md-4">
      <div class="card shadow border-0 h-100">
        <div class="card-body text-center">
          <h5 class="card-title">👥 Gérer les utilisateurs</h5>
          <p class="card-text">
            <span class="badge bg-primary">Total : {{ totalUsers }}</span>
            <span class="badge bg-info text-dark">Compagnons : {{ totalCompagnons }}</span>
          </p>

          <h6 class="mt-3">🛠️ Métiers :</h6>
          <ul class="list-group list-group-flush text-start">
            {% for metier, count in metierCounts %}
              <li class="list-group-item d-flex justify-content-between align-items-center">
                {{ metier }}
                <span class="badge bg-secondary">{{ count }}</span>
              </li>
            {% else %}
              <li class="list-group-item text-muted">Aucun métier renseigné</li>
            {% endfor %}
          </ul>

          <a href="/admin" class="btn btn-primary mt-3">Accéder</a>
        </div>
      </div>
    </div>

    <!-- Bloc Événements -->
    <div class="col-md-4">
      <div class="card shadow border-0 h-100">
        <div class="card-body text-center">
          <h5 class="card-title">📅 Gérer les événements</h5>
          <p class="card-text">
            <span class="badge bg-success">{{ pendingCount }} à valider</span>
            <span class="badge bg-primary">{{ totalCount }} au total</span>
          </p>
          <div class="d-grid gap-2">
            <a href="{{ path('admin_events_validate') }}" class="btn btn-success">✅ À valider</a>
            <a href="{{ path('admin_events_list') }}" class="btn btn-outline-primary">📋 Tous les événements</a>
          </div>
        </div>
      </div>
    </div>
 <!-- 🔍 Voir le trombinoscope -->
    <div class="col-md-2">
      <div class="card shadow border-0 h-100">
        <div class="card-body text-center d-flex flex-column h-100">
          <div>
            <h5 class="card-title">🔍 Voir le trombinoscope</h5>
            <p class="card-text">Consultez les membres de l'association.</p>
          </div>
          <a href="{{ path('user_search') }}" class="btn btn-primary mt-auto">Accéder</a>
        </div>
      </div>
    </div>
    <!-- Bloc Actualités -->
    <div class="col-md-2">
      <div class="card shadow border-0 h-100">
        <div class="card-body text-center">
          <h5 class="card-title">📰 Gérer les actualités</h5>
          <p class="card-text">Créer et publier des nouvelles sur le site.</p>
          <a href="{{ path('admin_news') }}" class="btn btn-warning">Accéder</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}