{% extends 'base.html.twig' %}

{% block title %}Nouvelle actualité{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-marron text-white">
            <h4><i class="fas fa-newspaper me-2"></i>Créer une nouvelle actualité</h4>
        </div>
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-heading me-1"></i> Titre</label>
                {{ form_widget(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Titre de l’actualité'}}) }}
            </div>

            <div class="mb-3">
                <label class="form-label"><i class="fas fa-align-left me-1"></i> Contenu</label>
                {{ form_widget(form.content, {'attr': {'class': 'form-control', 'rows': '5', 'placeholder': 'Contenu détaillé'}}) }}
            </div>

            <div class="form-check mb-3">
                {{ form_widget(form.isPublished, {'attr': {'class': 'form-check-input'}}) }}
                <label class="form-check-label"><i class="fas fa-eye me-1"></i> Accessible au public</label>
            </div>

            <div class="d-flex justify-content-between">
                <button class="btn btn-success">
                    <i class="fas fa-paper-plane me-1"></i> Publier
                </button>
                <a href="{{ path('admin_news_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                </a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
<style>
  .bg-marron {
    background-color: #8B4513; /* Marron type "saddle brown" */
  }
</style>
{% endblock %}