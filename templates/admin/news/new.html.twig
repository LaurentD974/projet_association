{% extends 'base.html.twig' %}

{% block title %}Nouvelle actualité{% endblock %}

{% block body %}
<div class="container py-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h4 class="h5 mb-0"><i class="fas fa-newspaper me-2"></i>Créer une nouvelle actualité</h4>
    </div>

    <div class="card-body">
      {{ form_start(form, { attr: { novalidate: 'novalidate' } }) }}
        {{ form_errors(form) }}

        <div class="mb-3">
          {{ form_row(form.title, {
            label: 'Titre',
            attr: { class: 'form-control', placeholder: 'Titre de l’actualité' }
          }) }}
        </div>

        <div class="mb-3">
          {{ form_row(form.content, {
            label: 'Contenu',
            attr: { class: 'form-control', rows: 5, placeholder: 'Contenu détaillé' }
          }) }}
        </div>

        <div class="form-check mb-3">
          {{ form_widget(form.isPublished, { attr: { class: 'form-check-input' } }) }}
          {{ form_label(form.isPublished, 'Accessible au public', { label_attr: { class: 'form-check-label' } }) }}
          {{ form_errors(form.isPublished) }}
        </div>

        <div class="d-flex justify-content-between">
          <a href="{{ path('admin_news_index') }}" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
          </a>
          <button type="submit" class="btn btn-success">
            <i class="fas fa-paper-plane me-1"></i> Publier
          </button>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}
