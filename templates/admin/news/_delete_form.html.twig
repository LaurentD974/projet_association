<form method="post"
      action="{{ path('app_news_delete', { id: news.id }) }}"
      class="d-inline"
      onsubmit="return confirm('Confirmer la suppression de cet élément ?');">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ news.id) }}">
  {# Si votre route attend DELETE :
  <input type="hidden" name="_method" value="DELETE">
  #}
  <button type="submit" class="btn btn-sm btn-danger" aria-label="Supprimer">
    🗑️ Supprimer
  </button>
</form>
