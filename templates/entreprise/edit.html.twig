{% extends 'base.html.twig' %}

{% block title %}Modifier l'entreprise{% endblock %}

{% block body %}
<div class="container mt-5">
  <h2 class="text-center text-warning mb-4">✏️ Modifier l'entreprise</h2>

  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-body p-4">
      {{ form_start(form) }}
        <div class="row g-4">
          <!-- 🏢 Informations générales -->
          <div class="col-md-6">
            <label class="form-label">🏢 Nom</label>
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="col-md-6">
            <label class="form-label">👤 Responsable</label>
            {{ form_widget(form.responsable, {'attr': {'class': 'form-control'}}) }}
          </div>

          <!-- 🏠 Adresse -->
          <div class="col-md-12">
            <label class="form-label">🏠 Adresse</label>
            {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="col-md-4">
            <label class="form-label">📮 Code postal</label>
            {{ form_widget(form.code_postale, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="col-md-8">
            <label class="form-label">🌍 Ville</label>
            {{ form_widget(form.ville, {'attr': {'class': 'form-control'}}) }}
          </div>

          <!-- 📞 Contact -->
          <div class="col-md-6">
            <label class="form-label">📞 Téléphone</label>
            {{ form_widget(form.telephone, {'attr': {'class': 'form-control'}}) }}
          </div>
          <div class="col-md-6">
            <label class="form-label">✉️ Email</label>
            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
          </div>
        </div>

        <!-- 🔘 Boutons -->
        <div class="d-flex justify-content-between mt-5">
          <a href="{{ path('entreprise_index') }}" class="btn btn-outline-secondary rounded-pill px-4">
            ⬅️ Retour à la liste
          </a>
          <button type="submit" class="btn btn-warning rounded-pill px-4">
            💾 Enregistrer
          </button>
        </div>
      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}